@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to God Of War CHaracters!</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<p>Character Selection:</p>
@foreach (var b in Model.CharacterGoW)
{
    <p>@Html.DisplayFor(modelItem => b.Title)</p>
}


<select asp-items="Model.CharacterGoWDropDown" class="form-control">
    <option value="">-- Select Character --</option>
</select>
